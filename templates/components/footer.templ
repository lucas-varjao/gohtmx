package components

// Footer shows version, trademark and year.
templ Footer(version string, year int, trademark string) {
	<footer class="mt-auto border-t border-base-300 bg-base-100">
		<div class="max-w-4xl mx-auto px-4 py-4">
			<div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-1 text-sm text-footer-muted">
				<span>Versão { version }</span>
				<span>·</span>
				<span>© { year } { trademark }. Todos os direitos reservados.</span>
			</div>
		</div>
	</footer>
}
